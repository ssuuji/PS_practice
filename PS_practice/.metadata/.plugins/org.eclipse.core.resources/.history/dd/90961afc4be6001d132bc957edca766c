package ps25304;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		long total = sc.nextLong(); //구매한 물건의 총 가격
		
		int su = sc.nextInt();//물건의 종류 수
		
		int price = sc.nextInt();
		int num = sc.nextInt();
		
		for (int i =0; i<=su ; i++) {
			total = total - (price*num);
		}
	}

}
